doctype html
html(lang='en')
  head
    title= title
    meta(name='description', content=description)
    link(rel="icon" type="image/png" sizes="32x32" href="../images/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="../images/favicon-16x16.png")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:100,200,300,400,600,700,800")
    link(rel="stylesheet" type="text/css" href='/doc/styles/normalize.css')
    link(rel="stylesheet" type="text/css" href='../../doc/styles/main.css')
  body
    .header
      .logo
      .nav
        .nav-left Hitachi Vantara
    .container
      .col-left
        .themes 
          p.title Theme
          select.theme-selector(onChange="main.changeTheme()")
            each theme in themesList
              option(value=theme.label)=theme.label
        .list
          p.title Components
          ul
            each component in componentsList
              li
                a(href=component.link)=component.label
      .content
        .content-desc!=content
      .col-right
        .list
          p.title Table of Contents
          ul
            each content in contentsList
              li
                a(href=content.link onClick="main.navigateTo()")=content.label
      script(src="../scripts/main.js")
      script(src="../scripts/jquery.js")